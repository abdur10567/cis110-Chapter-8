#include <iostream>
using namespace std;

int main() {
  const int ROW = 3;
  const int COL = 4;
  int searchValue;

  double matrix[ROW][COL] ;//= {2,5,9,12,7,6,10};  tmp=12

  for (int row = 0; row < ROW; row++)
  {
    for (int col = 0; col < COL; col++)
    {   
      cout << "Enter " << "row " << (row+1) << " column " <<  (col+1) << " element value: " << endl;
      cin >> matrix[row][col];   
    }
  }

  for (int row = 0; row < ROW; row++)
  {
    for (int col = 0; col < COL; col++)
    {       
      cout << " " << matrix[row][col] << " ";   
    }
    cout << endl;
  }

}
